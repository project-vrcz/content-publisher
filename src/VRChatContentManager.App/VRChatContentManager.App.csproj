<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net10.0</TargetFramework>
        <Nullable>enable</Nullable>
        <BuiltInComInteropSupport>true</BuiltInComInteropSupport>
        <ApplicationManifest>app.manifest</ApplicationManifest>
        <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
        <LangVersion>preview</LangVersion>
        <IsAotCompatible>true</IsAotCompatible>
        <ApplicationIcon>Assets/AppIcon.ico</ApplicationIcon>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)'!='Debug'">
        <PublishAot>true</PublishAot>
    </PropertyGroup>

    <ItemGroup>
        <AvaloniaResource Include="Assets\**"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Avalonia" Version="11.3.6"/>
        <PackageReference Include="Avalonia.Desktop" Version="11.3.6"/>
        <PackageReference Include="Avalonia.Themes.Fluent" Version="11.3.6"/>
        <PackageReference Include="Avalonia.Fonts.Inter" Version="11.3.6"/>
        <!--Condition below is needed to remove Avalonia.Diagnostics package from build output in Release configuration.-->
<!--        <PackageReference Include="Avalonia.Diagnostics" Version="11.3.6">-->
<!--            <IncludeAssets Condition="'$(Configuration)' != 'Debug'">None</IncludeAssets>-->
<!--            <PrivateAssets Condition="'$(Configuration)' != 'Debug'">All</PrivateAssets>-->
<!--        </PackageReference>-->
        <PackageReference Include="AvaloniaUI.DiagnosticsSupport" Version="2.0.4" />
        <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
        <PackageReference Include="DialogHost.Avalonia" Version="0.9.3" />

        <PackageReference Include="HotAvalonia" Version="3.0.0" PrivateAssets="All" Publish="True" />
        <PackageReference Include="Lemon.Hosting.AvaloniauiDesktop" Version="1.0.3-beta" />

        <PackageReference Include="Material.Avalonia" Version="3.13.1" />
        <PackageReference Include="Material.Icons.Avalonia" Version="2.4.1" />

        <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.9" />

        <PackageReference Include="Avalonia.Xaml.Behaviors" Version="11.3.0.6" />

        <PackageReference Include="Serilog" Version="4.3.0" />

        <PackageReference Include="Serilog.Extensions.Hosting" Version="9.0.0" />

        <PackageReference Include="Serilog.Formatting.Compact" Version="1.1.0" />

        <PackageReference Include="Serilog.Sinks.Async" Version="2.1.0" />

        <PackageReference Include="Serilog.Sinks.Console" Version="6.0.0" />

        <PackageReference Include="Serilog.Sinks.Debug" Version="3.0.0" />

        <PackageReference Include="Serilog.Sinks.File" Version="7.0.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\VRChatContentManager.Core\VRChatContentManager.Core.csproj" />
    </ItemGroup>

    <ItemGroup>
        <!-- Preserve Avalonia types for reflection -->
        <TrimmerRootAssembly Include="Avalonia.Controls"/>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Views\Data\PublishTasks\PublishTaskManagerView.axaml.cs">
        <DependentUpon>TaskManagerView.axaml</DependentUpon>
        <SubType>Code</SubType>
      </Compile>
      <Compile Update="Pages\AddAccountPage.axaml.cs">
        <DependentUpon>AddAccountPage.axaml</DependentUpon>
        <SubType>Code</SubType>
      </Compile>
    </ItemGroup>
</Project>
